<UserControl x:Class="gameLauncher.View.GamePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gameLauncher.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Text="Game" VerticalAlignment="Center" Name="gameText"
                   FontSize="40" Margin="15,-100,0,0"></TextBlock>
        <Button Name="RunBtn" VerticalAlignment="Center" HorizontalAlignment="Left"
                Margin="15" Height="50" Width="100"
                Content="Run" FontSize="20" Click="RunGame_Click">
        </Button>
    </Grid>
</UserControl>
